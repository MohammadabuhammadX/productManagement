@page
@model productManagement.Web.Pages.Products.IndexModel
@using Microsoft.Extensions.Localization
@using productManagement.Localization
@inject IStringLocalizer<productManagementResource> L
@section scripts
{
    <abp-script src="/Pages/Products/Index.js" />
}

<abp-card class="rounded shadow-sm">
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Menu:Products"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                <abp-button id="NewProductButton"
                            text="@L["NewProduct"].Value"
                            icon="plus"
                            button-type="Primary" />
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body class="pb-3">
        <abp-table id="ProductsTable"
                   striped-rows="true"
                   class="table-borderless nowrap hoverable-rows rounded data-table">
        </abp-table>
    </abp-card-body>
</abp-card>