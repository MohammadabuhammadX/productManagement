@page
@model productManagement.Web.Pages.Products.IndexModel
@using Microsoft.Extensions.Localization
@using productManagement.Localization
@inject IStringLocalizer<productManagementResource> L
@section scripts
{
    <abp-script src="/Pages/Products/Index.js" />
}

<abp-card class="rounded shadow-sm">
    <abp-card-header class="py-3">
        <abp-row>
            <abp-column size="_9">
                <abp-card-title class="h4 mb-0 text-dark">@L["Menu:Products"]</abp-card-title>
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body class="pb-3">
        <abp-table id="ProductsTable"
                   striped-rows="true"
                   class="table-borderless nowrap hoverable-rows rounded data-table">
        </abp-table>
    </abp-card-body>
</abp-card>